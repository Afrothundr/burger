<div class="container">
	<h1>Burger Time!</h1>
	<img src="assets/img/burger.png">
	<h2>Add a Burger</h2>
	<form class="create-form">

	  <div class="form-group">
	    <label for="burger"> Burger Name:</label>
	    <input type="text" id="burger" name="burger">
	  </div>

	  <button type="submit">Add Burger</button>
	</form>

	<div class="row">
		<div class="col-lg-6 order-up">
			<h2>Burger Menu</h2>
			<ul>
				{{#each burgers}}
		    	{{#unless devoured}}
		      	{{> burgers/burger-block devoured = 0}}
		    	{{/unless}}
		  		{{/each}}
			</ul>
		</div>
		<div class="col-lg-6 clean-plate">
			<h2>Burgers Eaten</h2>
			<ul>
				{{#each burgers}}
	    		{{#if devoured}}
	      		{{> burgers/burger-block devoured = 1}}
	    		{{/if}}
	  			{{/each}}
			</ul>
		</div>
	</div>
</div>